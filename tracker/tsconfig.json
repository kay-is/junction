{
  "include": ["modules/**/*.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
